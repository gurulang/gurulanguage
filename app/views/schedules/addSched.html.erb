<div class="container">
    <div class="form-signin">
        <h2> Add New Schedule </h2>
         <%= form_for(@schedule) do |f| %>
              <% if @schedule.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

                  <ul>
                  <% @schedule.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

             <div class="field">
                <%=  %>
                <%= f.hidden_field :userID, :value=>session[:user_id] %>
            </div>

             <div class="field">
                <%= f.label :Day %><br />
                <%= f.text_field :day %>
            </div>

             <div class="field">
                <%= f.label :Start %><br />
                <%= f.time_select :start %>
            </div>

             <div class="field">
                <%= f.label :End %><br />
                <%= f.time_select  :end %>
            </div>
            
            <%= check_box_tag "day[]", "Sunday" %>Sunday
            <%= check_box_tag "day[]", "Monday" %>Monday
            <%= check_box_tag "day[]", "Tuesday" %>Tuesday
            <%= check_box_tag "day[]", "Wednesday" %>Wednesday
            <%= check_box_tag "day[]", "Thursday" %>Thursday
            <%= check_box_tag "day[]", "Friday" %>Friday
            <%= check_box_tag "day[]", "Saturday" %>Saturday<br><br>

            <div class="actions"> 
                <%= f.submit %>
              </div>
        <% end %>
